	include ../../sections/ui-nav-inside-ui.pug

	.main-wrapper
		.container.container--left
			.title Карточки
			p
				em Карточка пост

			.section-ui
				+card-post('../img/svg-for-sprites/blog-preview.png', 'Поездка в New York пример длинного названия поста...', '#')
